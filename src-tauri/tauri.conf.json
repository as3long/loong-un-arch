{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist"
  },
  "package": {
    "productName": "LoongUnArch",
    "version": "0.1.11"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": true, 
        "ask": true, 
        "confirm": true, 
        "message": true, 
        "open": true, 
        "save": true
      },
      "os": {
        "all": true
      },
      "shell": {
        "all": false,
        "execute": true,
        "open": true,
        "scope": [{
          "name": "explorer-select",
          "cmd": "explorer",
          "args": ["/select,", { "validator": "\\S+" }]
        }, {
          "name": "mac-open",
          "cmd": "open",
          "args": ["-R", { "validator": "\\S+" }]
        }],
        "sidecar": true
      }
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.as3long.dev",
      "icon": [
        "icons/32x32.png",
        "icons/128x128.png",
        "icons/128x128@2x.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ]
    },
    "security": {
      "csp": null
    },
    "windows": [
      {
        "fullscreen": false,
        "resizable": true,
        "title": "rar、zip 解压",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ]
  }
}
